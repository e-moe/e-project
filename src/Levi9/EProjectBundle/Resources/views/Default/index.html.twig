{% extends '::base.html.twig' %}

{% block title %}{% trans %}Recycle Batteries{% endtrans %}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/levi9eproject/css/main.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>{% trans %}Welcome to Recycle Batteries application{% endtrans %}</h1>
    <p>{% trans with {'%url' : path('levi9_eproject_default_add')} %}
        Click <a href="%url">here</a> to add new batteries to the box
        {% endtrans %}</p>
    <p>{% trans %}Statistics{% endtrans %}</p>
    <table>
        <thead>
            <tr>
                <th>{% trans %}Battery type{% endtrans %}</th>
                <th>{% trans %}Total count{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for row in stat %}
                <tr>
                    <td>{{ row.type }}</td>
                    <td>{{ row.cnt }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">{% trans %}Empty{% endtrans %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ form(reset) }}
{% endblock %}

